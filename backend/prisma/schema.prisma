generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  INFLUENCER
  BUSINESS
  ADMIN
}

enum Industry {
  Fitness
  Tech
  Fashion
  Beauty
  Lifestyle
  Travel
  FoodAndCooking
  Gaming
  ParentingAndFamily
  BusinessAndFinance
}

enum Value {
  Authenticity
  Transparency
  Creativity
  Inclusivity
  BodyPositivity
  MentalHealthAwareness
}

model User {
  id          Int   @id @default(autoincrement())
  email       String   @unique
  password    String
  role        Role

  influencer Influencer?
  business Business?
}

model Influencer {
  userId         Int  @id
  user           User    @relation(fields: [userId], references: [id])
  name           String
  headline       String?
  experience     Int?
  isPrivate     Boolean  @default(true)
  industries     Industry[]
  values         Value[]
}

model Business {
  userId         Int  @id
  business       User @relation(fields: [userId], references: [id])
  name           String
}