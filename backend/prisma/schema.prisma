generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  INFLUENCER
  BUSINESS
  ADMIN
}

model User {
  id          Int   @id @default(autoincrement())
  email       String   @unique
  password    String
  role        Role

  influencer Influencer?
}

model Influencer {
  userId         Int  @id
  user           User    @relation(fields: [userId], references: [id])
  name           String
  headline       String?
  experience     Int?
  isPrivate     Boolean  @default(true)

  post       Post[]
}

model Post {
  id          Int   @id @default(autoincrement())
  userId      Int 
  user        Influencer    @relation(fields: [userId], references: [userId])
  text        String?
  images      String[]
  createdAt   DateTime
  updatedAt   DateTime?
}